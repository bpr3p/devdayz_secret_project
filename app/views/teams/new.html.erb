<div class="container">
<%= form_for @team do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :description %><br>
    <%= form.text_field :description %>
  </p>

  <%= hidden_field(:team, :year_id, value: @year_id) %>

  <p>
    <%= form.submit class: "btn btn-success btn-sm" %>
  </p>
<% end %>
</div>
