<h1>Categories edit</h1>

<%= form_for @category do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :year_id, 'Year' %>
    <%= form.select("year_id", options_for_select(Year.all.collect {|y| [ y.year, y.id ] }, selected: @category.year.id)) %>
  </p>

  <p>
    <%= form.submit %>
    <%= link_to 'Delete', category_path(@category), method: :delete, data: { confirm: 'Are you sure?' }, class: "button", id: "delete-button" %>
  </p>
<% end %>
