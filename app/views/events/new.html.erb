<%= form_for @event do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :description %><br>
    <%= form.text_field :description %>
  </p>

  <p>
    <%= form.label :year_id %><br>
    <%= form.select(:year_id, options_for_select(Year.all.collect {|p| [ p.year, p.id ] }), { include_blank: false }) %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>
