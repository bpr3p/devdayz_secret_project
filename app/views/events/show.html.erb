<%= link_to "Back to Events", events_path %>

<p>
  <strong>Event Name:</strong>
  <%= @event.name %>
</p>

<p>
  <strong>Year:</strong>
  <%= Year.find(@event.year_id).year %>
</p>



<%= form_tag update_scores_scores_url, :method => :put do |f| %>
  <ul>
  <% for score in @event.scores %>
    <li>
      <%= hidden_field_tag "score_ids[]", score.id %>
      <%= text_field_tag "score_values[]", score.value %>
    </li>
  <% end %>
  </ul>
  <input type="submit" name="commit" method="put" value="Submit" />
<% end %>
