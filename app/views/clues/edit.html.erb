<div class="container">
<h2>Edit Word</h2>
<%= form_for @clue do |form| %>
  <div id="word-field">
    <%= form.label :word, 'Word' %>
    <%= form.text_field :word %>
  </div>

  <div id="category-field">
    <%= form.label :category_id, 'Category' %>
    <%= form.select(:category_id, options_for_select(Category.where(year_id: @clue.category.year_id).collect {|c| [ c.name, c.id ] })) %>
  </div>

  <div id="year-field">
    <%= form.label :event_id, 'Year' %>
    <%= form.select("event_id", options_for_select(Event.pictionary.all.collect {|e| [ e.year.year, e.id ] },  selected: @clue.event.id)) %>
  </div>

  <div>
    <%= form.submit 'Submit', class: 'button' %>
    <%= link_to 'Delete', clue_path(@clue), method: :delete, data: { confirm: 'Are you sure?' }, class: "button", id: "delete-button" %>
  </div>
<% end %>
</div>
